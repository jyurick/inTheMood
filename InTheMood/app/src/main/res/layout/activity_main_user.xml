<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.austin.inthemood.MainUser">

    <Button
        android:id="@+id/myMoodsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="My Moods"
        android:onClick="MyMoods"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/myFriendsButton"
        android:layout_alignStart="@+id/myFriendsButton"
        android:layout_alignRight="@+id/myFriendsButton"
        android:layout_alignEnd="@+id/myFriendsButton" />

    <Button
        android:id="@+id/nearbyMoodsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myFriendsButton"
        android:layout_alignLeft="@+id/myFriendsButton"
        android:layout_alignRight="@+id/myFriendsButton"
        android:layout_alignStart="@+id/myFriendsButton"
        android:layout_below="@id/myFriendsButton"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:onClick="openMap"
        android:text="Nearby Moods" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Sign Out"
        android:onClick="SignOut"
        android:layout_below="@+id/moodCalendarButton"
        android:layout_alignLeft="@+id/nearbyMoodsButton"
        android:layout_alignStart="@+id/nearbyMoodsButton"
        android:layout_alignRight="@+id/nearbyMoodsButton"
        android:layout_alignEnd="@+id/nearbyMoodsButton" />


    <Button
        android:id="@+id/myFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:onClick="MyFriends"
        android:text="My Friends Moods"
        android:layout_below="@+id/myMoodsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/moodCalendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nearbyMoodsButton"
        android:layout_alignLeft="@+id/nearbyMoodsButton"
        android:layout_alignRight="@+id/nearbyMoodsButton"
        android:layout_alignStart="@+id/nearbyMoodsButton"
        android:layout_below="@+id/nearbyMoodsButton"
        android:layout_marginTop="25dp"
        android:onClick="MoodCalendar"
        android:text="Mood Calendar" />
</RelativeLayout>
